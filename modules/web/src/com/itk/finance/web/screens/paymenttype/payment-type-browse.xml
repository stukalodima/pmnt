<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://paymentTypeBrowse.caption"
        focusComponent="paymentTypesTable"
        messagesPack="com.itk.finance.web.screens.paymenttype">
    <data readOnly="true">
        <collection id="paymentTypesDc"
                    class="com.itk.finance.entity.PaymentType">
            <view extends="_local"/>
            <loader id="paymentTypesDl">
                <query>
                    <![CDATA[select e from finance_PaymentType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="paymentTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="paymentTypesTable"
                dataLoader="paymentTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="paymentTypesTable"
                    width="100%"
                    dataContainer="paymentTypesDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="paymentTypesTable.create"/>
                <button id="editBtn" action="paymentTypesTable.edit"/>
                <button id="removeBtn" action="paymentTypesTable.remove"/>
                <button id="refreshBtn" action="paymentTypesTable.refresh"/>
                <button id="excelBtn" action="paymentTypesTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
