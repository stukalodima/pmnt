<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://paymentClaimEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.finance.web.screens.paymentclaim">
    <data>
        <instance id="paymentClaimDc"
                  class="com.itk.finance.entity.PaymentClaim">
            <view extends="_local">
                <property name="business" view="_minimal"/>
                <property name="company" view="_minimal"/>
                <property name="client" view="_minimal"/>
                <property name="cashFlowItem" view="_minimal"/>
                <property name="paymentType" view="_minimal"/>
                <property name="author" view="_minimal"/>
                <property name="cashFlowItemBusiness" view="_minimal"/>
                <property name="account" view="_minimal"/>
                <property name="currency" view="_minimal"/>
            </view>
            <loader id="paymentClaimDl"/>
        </instance>
        <collection id="businessesDc" class="com.itk.finance.entity.Business">
            <view extends="_local"/>
            <loader id="businessesDl">
                <query>
                    <![CDATA[select e from finance_Business e]]>
                </query>
            </loader>
        </collection>
        <collection id="companiesDc" class="com.itk.finance.entity.Company" view="_minimal">
            <loader id="companiesDl">
                <query>
                    <![CDATA[select e from finance_Company e]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.business = :business</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="clientsDc" class="com.itk.finance.entity.Client" view="_minimal">
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from finance_Client e]]>
                </query>
            </loader>
        </collection>
        <collection id="cashFlowItemsDc" class="com.itk.finance.entity.CashFlowItem" view="_minimal">
            <loader id="cashFlowItemsDl">
                <query>
                    <![CDATA[select e from finance_CashFlowItem e]]>
                </query>
            </loader>
        </collection>
        <collection id="paymentTypesDc" class="com.itk.finance.entity.PaymentType" view="_minimal">
            <loader id="paymentTypesDl">
                <query>
                    <![CDATA[select e from finance_PaymentType e]]>
                </query>
            </loader>
        </collection>
        <collection id="usersDc" class="com.haulmont.cuba.security.entity.User">
            <view extends="_local"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="cashFlowItemBusinessesDc" class="com.itk.finance.entity.CashFlowItemBusiness">
            <view extends="_local">
                <property name="company" view="_minimal"/>
                <property name="cashFlowItem" view="_minimal"/>
            </view>
            <loader id="cashFlowItemBusinessesDl">
                <query>
                    <![CDATA[select e from finance_CashFlowItemBusiness e]]>
                </query>
            </loader>
        </collection>
        <collection id="accountsDc" class="com.itk.finance.entity.Account">
            <view extends="_local">
                <property name="company" view="_minimal"/>
                <property name="currency" view="_minimal"/>
                <property name="bank" view="_minimal"/>
            </view>
            <loader id="accountsDl">
                <query>
                    <![CDATA[select e from finance_Account e]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.company = :company</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="currenciesDc" class="com.itk.finance.entity.Currency">
            <view extends="_local"/>
            <loader id="currenciesDl">
                <query>
                    <![CDATA[select e from finance_Currency e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode
            modal="true"
            forceDialog="true" resizable="true" width="75%"/>
    <layout expand="editActions" spacing="true" width="100%">
        <form id="form" dataContainer="paymentClaimDc" width="100%">
            <column width="50%">
                <textField id="numberField" property="number" width="100%" editable="false"/>
                <dateField id="onDateField" property="onDate" width="100%"/>
                <lookupPickerField id="businessField" optionsContainer="businessesDc" property="business"
                                   width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="clientField" optionsContainer="clientsDc" property="client" width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="currencyField" property="currency" optionsContainer="currenciesDc" width="100%">
                    <actions>
                        <action id="picker_open" type="picker_open"/>
                        <action id="picker_clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="cashFlowItemField" optionsContainer="cashFlowItemsDc"
                                   property="cashFlowItem" width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <textArea id="paymentPurposeField" property="paymentPurpose" rows="3" width="100%"/>
                <lookupPickerField id="paymentTypeField" optionsContainer="paymentTypesDc"
                                   property="paymentType" width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>

            </column>
            <column width="50%">
                <lookupField id="statusField" property="status" width="100%" editable="false"/>
                <dateField id="planPaymentDateField" property="planPaymentDate" width="100%"/>
                <lookupPickerField id="companyField" optionsContainer="companiesDc" property="company"
                                   width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="accountField" property="account" optionsContainer="accountsDc" width="100%">
                    <actions>
                        <action id="picker_open" type="picker_open"/>
                        <action id="picker_clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <textField id="summField" property="summ" width="100%"/>
                <lookupPickerField id="cashFlowItemBusinessField" property="cashFlowItemBusiness"
                                   optionsContainer="cashFlowItemBusinessesDc" width="100%">
                    <actions>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <textArea id="commentField" property="comment" rows="3" width="100%"/>
                <lookupField id="authorField" property="author" optionsContainer="usersDc" width="100%"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
