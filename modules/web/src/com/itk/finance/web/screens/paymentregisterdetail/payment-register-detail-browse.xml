<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://paymentRegisterDetailBrowse.caption"
        focusComponent="paymentRegisterDetailsTable"
        messagesPack="com.itk.finance.web.screens.paymentregisterdetail">
    <data readOnly="true">
        <collection id="paymentRegisterDetailsDc"
                    class="com.itk.finance.entity.PaymentRegisterDetail">
            <view extends="_local">
                <property name="company" view="_minimal"/>
                <property name="client" view="_minimal"/>
                <property name="cashFlowItem" view="_minimal"/>
                <property name="paymentType" view="_minimal"/>
                <property name="paymentClaim" view="_minimal"/>
                <property name="paymentRegister" view="_minimal"/>
            </view>
            <loader id="paymentRegisterDetailsDl">
                <query>
                    <![CDATA[select e from finance_PaymentRegisterDetail e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="paymentRegisterDetailsTable"
            spacing="true">
        <filter id="filter"
                applyTo="paymentRegisterDetailsTable"
                dataLoader="paymentRegisterDetailsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="paymentRegisterDetailsTable"
                    width="100%"
                    dataContainer="paymentRegisterDetailsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="approved"/>
                <column id="company"/>
                <column id="client"/>
                <column id="summ"/>
                <column id="paymentPurpose"/>
                <column id="cashFlowItem"/>
                <column id="paymentType"/>
                <column id="comment"/>
                <column id="paymentClaim"/>
                <column id="paymentRegister"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="paymentRegisterDetailsTable.create"/>
                <button id="editBtn" action="paymentRegisterDetailsTable.edit"/>
                <button id="removeBtn" action="paymentRegisterDetailsTable.remove"/>
                <button id="refreshBtn" action="paymentRegisterDetailsTable.refresh"/>
                <button id="excelBtn" action="paymentRegisterDetailsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
