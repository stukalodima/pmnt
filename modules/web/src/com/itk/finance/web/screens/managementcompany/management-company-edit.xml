<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://managementCompanyEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.finance.web.screens.managementcompany">
    <data>
        <instance id="managementCompanyDc"
                  class="com.itk.finance.entity.ManagementCompany">
            <view extends="_local">
                <property name="finControler" view="_minimal"/>
                <property name="finDirector" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="finControlersDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="finControlersDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="finDirectorsDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="finDirectorsDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="managementCompanyDc">
            <column width="400px">
                <textField id="shortNameField" property="shortName"/>
                <textArea id="nameField" property="name" rows="3"/>
                <lookupPickerField id="finControlerField" optionsContainer="finControlersDc" property="finControler">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="finDirectorField" optionsContainer="finDirectorsDc" property="finDirector">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
