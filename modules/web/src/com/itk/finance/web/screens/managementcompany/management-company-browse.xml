<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://managementCompanyBrowse.caption"
        focusComponent="managementCompaniesTable"
        messagesPack="com.itk.finance.web.screens.managementcompany">
    <data readOnly="true">
        <collection id="managementCompaniesDc"
                    class="com.itk.finance.entity.ManagementCompany">
            <view extends="_local">
                <property name="finControler" view="_minimal"/>
                <property name="finDirector" view="_minimal"/>
            </view>
            <loader id="managementCompaniesDl">
                <query>
                    <![CDATA[select e from finance_ManagementCompany e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="managementCompaniesTable"
            spacing="true">
        <filter id="filter"
                applyTo="managementCompaniesTable"
                dataLoader="managementCompaniesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="managementCompaniesTable"
                    width="100%"
                    dataContainer="managementCompaniesDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="shortName"/>
                <column id="name"/>
                <column id="finControler"/>
                <column id="finDirector"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="managementCompaniesTable.create"/>
                <button id="editBtn" action="managementCompaniesTable.edit"/>
                <button id="removeBtn" action="managementCompaniesTable.remove"/>
                <button id="refreshBtn" action="managementCompaniesTable.refresh"/>
                <button id="excelBtn" action="managementCompaniesTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
