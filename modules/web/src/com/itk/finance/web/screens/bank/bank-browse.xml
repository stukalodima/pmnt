<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://bankBrowse.caption"
        focusComponent="banksTable"
        messagesPack="com.itk.finance.web.screens.bank">
    <data readOnly="true">
        <collection id="banksDc"
                    class="com.itk.finance.entity.Bank">
            <view extends="_local"/>
            <loader id="banksDl">
                <query>
                    <![CDATA[select e from finance_Bank e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="banksTable"
            spacing="true">
        <filter id="filter"
                applyTo="banksTable"
                dataLoader="banksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="banksTable"
                    width="100%"
                    dataContainer="banksDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="mfo"/>
                <column id="edrpou"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="banksTable.create"/>
                <button id="editBtn" action="banksTable.edit"/>
                <button id="removeBtn" action="banksTable.remove"/>
                <button id="refreshBtn" action="banksTable.refresh"/>
                <button id="excelBtn" action="banksTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
