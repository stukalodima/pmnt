<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://clientBrowse.caption"
        focusComponent="clientsTable"
        messagesPack="com.itk.finance.web.screens.client">
    <data readOnly="true">
        <collection id="clientsDc"
                    class="com.itk.finance.entity.Client">
            <view extends="_local"/>
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from finance_Client e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="clientsTable"
            spacing="true">
        <filter id="filter"
                applyTo="clientsTable"
                dataLoader="clientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="clientsTable"
                    width="100%"
                    dataContainer="clientsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
                <action id="getClientListFromEdr" caption="msg://getClientListFromEdr.caption"/>
            </actions>
            <columns>
                <column id="shortName"/>
                <column id="clientType"/>
                <column id="stan"/>
                <column id="edrpou"/>
                <column id="address"/>
                <column id="kved"/>
                <column id="boss"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="clientsTable.create"/>
                <button id="editBtn" action="clientsTable.edit"/>
                <button id="removeBtn" action="clientsTable.remove"/>
                <button id="refreshBtn" action="clientsTable.refresh"/>
                <button id="excelBtn" action="clientsTable.excel"/>
                <button id="clientsTableGetClientListFromEdrBtn" action="clientsTable.getClientListFromEdr"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
