<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://accountBrowse.caption"
        focusComponent="accountsTable"
        messagesPack="com.itk.finance.web.screens.account">
    <data readOnly="true">
        <collection id="accountsDc"
                    class="com.itk.finance.entity.Account">
            <view extends="_local">
                <property name="currency" view="_minimal"/>
                <property name="bank" view="_minimal"/>
                <property name="company" view="_minimal"/>
            </view>
            <loader id="accountsDl">
                <query>
                    <![CDATA[select e from finance_Account e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="accountsTable"
            spacing="true">
        <filter id="filter"
                applyTo="accountsTable"
                dataLoader="accountsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="accountsTable"
                    width="100%"
                    dataContainer="accountsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="company"/>
                <column id="name"/>
                <column id="currency"/>
                <column id="iban"/>
                <column id="bank"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="accountsTable.create"/>
                <button id="editBtn" action="accountsTable.edit"/>
                <button id="removeBtn" action="accountsTable.remove"/>
                <button id="refreshBtn" action="accountsTable.refresh"/>
                <button id="excelBtn" action="accountsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
