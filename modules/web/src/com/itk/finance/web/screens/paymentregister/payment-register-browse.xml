<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://paymentRegisterBrowse.caption"
        focusComponent="paymentRegistersTable"
        messagesPack="com.itk.finance.web.screens.paymentregister">
    <data readOnly="true">
        <collection id="paymentRegistersDc"
                    class="com.itk.finance.entity.PaymentRegister">
            <view extends="_local">
                <property name="business" view="_minimal"/>
                <property name="paymentRegisters" view="_minimal">
                    <property name="approved"/>
                    <property name="company" view="_minimal"/>
                    <property name="paymentPurpose"/>
                    <property name="cashFlowItem" view="_minimal"/>
                    <property name="paymentType" view="_minimal"/>
                    <property name="comment"/>
                    <property name="paymentRegister" view="_minimal"/>
                </property>
                <property name="author" view="_minimal"/>
            </view>
            <loader id="paymentRegistersDl">
                <query>
                    <![CDATA[select e from finance_PaymentRegister e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="paymentRegistersTable"
            spacing="true">
        <filter id="filter"
                applyTo="paymentRegistersTable"
                dataLoader="paymentRegistersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="paymentRegistersTable"
                    width="100%"
                    dataContainer="paymentRegistersDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="onDate"/>
                <column id="business"/>
                <column id="author"/>
                <column id="status"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="paymentRegistersTable.create"/>
                <button id="editBtn" action="paymentRegistersTable.edit"/>
                <button id="removeBtn" action="paymentRegistersTable.remove"/>
                <button id="refreshBtn" action="paymentRegistersTable.refresh"/>
                <button id="excelBtn" action="paymentRegistersTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
