<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://cashFlowItemBusinessBrowse.caption"
        focusComponent="cashFlowItemBusinessesTable"
        messagesPack="com.itk.finance.web.screens.cashflowitembusiness">
    <data readOnly="true">
        <collection id="cashFlowItemBusinessesDc"
                    class="com.itk.finance.entity.CashFlowItemBusiness">
            <view extends="_local">
                <property name="company" view="_minimal"/>
                <property name="cashFlowItem" view="_minimal"/>
            </view>
            <loader id="cashFlowItemBusinessesDl">
                <query>
                    <![CDATA[select e from finance_CashFlowItemBusiness e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="cashFlowItemBusinessesTable"
            spacing="true">
        <filter id="filter"
                applyTo="cashFlowItemBusinessesTable"
                dataLoader="cashFlowItemBusinessesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="cashFlowItemBusinessesTable"
                    width="100%"
                    dataContainer="cashFlowItemBusinessesDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
                <action id="fillCashFlowItems" caption="msg://fillCashFlowItems.caption"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="company"/>
                <column id="cashFlowItem"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="cashFlowItemBusinessesTable.create"/>
                <button id="editBtn" action="cashFlowItemBusinessesTable.edit"/>
                <button id="removeBtn" action="cashFlowItemBusinessesTable.remove"/>
                <button id="refreshBtn" action="cashFlowItemBusinessesTable.refresh"/>
                <button id="excelBtn" action="cashFlowItemBusinessesTable.excel"/>
                <button id="cashFlowItemBusinessesTableFillCashFlowItemsBtn"
                        action="cashFlowItemBusinessesTable.fillCashFlowItems"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
