<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://businessEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.finance.web.screens.business">
    <data>
        <instance id="businessDc"
                  class="com.itk.finance.entity.Business">
            <view extends="_local">
                <property name="finDirector" view="_minimal"/>
                <property name="managementCompany" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="userDC"
                    class="com.haulmont.cuba.security.entity.User">
            <view extends="_local"/>
            <loader id="userDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="managementCompaniesDc" class="com.itk.finance.entity.ManagementCompany">
            <view extends="_local"/>
            <loader id="managementCompaniesDl">
                <query>
                    <![CDATA[select e from finance_ManagementCompany e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="businessDc">
            <column width="400px">
                <textField id="nameField" property="name"/>
                <lookupField id="finDirectorField" property="finDirector" optionsContainer="userDC"/>
                <lookupPickerField id="managementCompanyField" property="managementCompany"
                                   optionsContainer="managementCompaniesDc">
                    <actions>
                        <action id="picker_lookup" type="picker_lookup"/>
                        <action id="picker_open" type="picker_open"/>
                        <action id="picker_clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
