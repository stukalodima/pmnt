<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://businessEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.finance.web.screens.business">
    <data>
        <instance id="businessDc"
                  class="com.itk.finance.entity.Business">
            <view extends="_local">
                <property name="finControler" view="_minimal"/>
                <property name="finDirector" view="_minimal"/>
                <property name="genDirector" view="_minimal"/>
                <property name="finControlerSH" view="_minimal"/>
                <property name="finDirectorSH" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="userDC"
                    class="com.haulmont.cuba.security.entity.User">
            <view extends="_local"/>
            <loader id="userDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="businessDc">
            <column width="400px">
                <textField id="nameField" property="name"/>
                <lookupField id="finControlerField" property="finControler" optionsContainer="userDC"/>
                <lookupField id="finDirectorField" property="finDirector" optionsContainer="userDC"/>
                <lookupField id="genDirectorField" property="genDirector" optionsContainer="userDC"/>
                <lookupField id="finControlerSHField" property="finControlerSH" optionsContainer="userDC"/>
                <lookupField id="finDirectorSHField" property="finDirectorSH" optionsContainer="userDC"/>
                <checkBox id="usePatmantClaimField" property="usePaymantClaim"/>
                <checkBox id="usePaymentClaimApprovalField" property="usePaymentClaimApproval" editable="false"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
