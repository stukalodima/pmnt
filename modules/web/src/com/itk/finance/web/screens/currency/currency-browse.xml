<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://currencyBrowse.caption"
        focusComponent="currenciesTable"
        messagesPack="com.itk.finance.web.screens.currency">
    <data readOnly="true">
        <collection id="currenciesDc"
                    class="com.itk.finance.entity.Currency">
            <view extends="_local"/>
            <loader id="currenciesDl">
                <query>
                    <![CDATA[select e from finance_Currency e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="currenciesTable"
            spacing="true">
        <filter id="filter"
                applyTo="currenciesTable"
                dataLoader="currenciesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="currenciesTable"
                    width="100%"
                    dataContainer="currenciesDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="shortName"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="currenciesTable.create"/>
                <button id="editBtn" action="currenciesTable.edit"/>
                <button id="removeBtn" action="currenciesTable.remove"/>
                <button id="refreshBtn" action="currenciesTable.refresh"/>
                <button id="excelBtn" action="currenciesTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
